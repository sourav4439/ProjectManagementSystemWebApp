@model ProjectManagementSystem.Models.ProjectInfoUsers

@{
    ViewData["Title"] = "AssignResourcePerson";
}

<h1>AssignResourcePerson</h1>

<h4>ProjectInfoUsers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignResourcePerson" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId">
                    <option>Select A Resource Person</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProjectInfoId" class="control-label"></label>
                <select asp-for="ProjectInfoId" class="form-control" asp-items="ViewBag.ProjectInfoId">
                    <option> Select A Project</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="ADD" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
