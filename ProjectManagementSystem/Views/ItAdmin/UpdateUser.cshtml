@model ProjectManagementSystem.Models.UserInfoViewModel

@{
    ViewData["Title"] = "Edit User";
}
@section Style
    {

    <link href="~/css/bootstrap-select/bootstrap-select.css" rel="stylesheet" asp-append-version="true" />


}
<h3 style="margin-left:610px;color:#9C27B0">EDIT USER</h3>

<form asp-action="UpdateUser">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <input type="hidden" asp-for="Id"/>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            <div class="form-example-wrap">

                <div class="form-example-int">
                    <div class="form-group">

                        <label asp-for="Name"></label>
                        <div class="nk-int-st">
                            <input asp-for="Name" class="form-control input-sm" placeholder="Name">

                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-example-int">
                    <div class="form-group">

                        <label asp-for="Email"></label>
                        <div class="nk-int-st">
                            <input type="text" asp-for="Email" class="form-control input-sm" placeholder="Email">

                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-example-int">
                    <div class="form-group">

                        <label asp-for="Password"></label>
                        <div class="nk-int-st">
                            <input asp-for="Password" class="form-control input-sm" placeholder="Password">

                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <input type="radio" asp-for="Status" value="Active" checked="checked"/>Active
                    <input type="radio" asp-for="Status" value="InActive"/>InActive
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>


                <div class="nk-int-mk sl-dp-mn">
                    <label asp-for="RoleId" class="control-label"></label>
                </div>
                <div class="bootstrap-select fm-cmp-mg">

                    <select asp-for="RoleId" asp-items="ViewBag.designation" class="selectpicker">
                        <option>Select A Designation</option>

                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>








                <div class="form-example-int mg-t-15">
                    <button type="submit" class="btn btn-success notika-btn-success">Submit</button>
                </div>
            </div>

        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/bootstrap-select/bootstrap-select.js" asp-append-version="true"></script>
}
